{
  "name": "mifune-cfh",
  "description": "Cards For Humanity: A game for horrible people desperately trying to do good.",
  "keywords": [
    "charity",
    "mongodb",
    "angularjs",
    "online-game"
  ],
  "repository": "https://github.com/andela/mifune-cfh",
  "env": {
    "MONGOHQ_URL": {
      "required": true
    },
    "MONGODB_URI": {
      "required": true
    },
    "HS256_SECRET": {
      "required": true
    },
    "APIKEY": {
      "required": true
    },
    "AUTHDOMAIN": {
      "required": true
    },
    "DATABASEURL": {
      "required": true
    },
    "PROJECTID": {
      "required": true
    },
    "STORAGEBUCKET": {
      "required": true
    },
    "MESSAGINGSENDERID": {
      "required": true
    }
  },
  "addons": [
    "mongolab"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}